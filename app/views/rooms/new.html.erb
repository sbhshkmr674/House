<div class="form-wrapper">
  <%= simple_form_for @room, html: { class: 'form-horizontal', multipart: true } do |f| %>
   <div class="form-group">
   <div class="col-lg-3">
      <%= f.label :floor %>
      </div>
   <div class="col-lg-9">

      <%= f.text_area :floor%>
    </div>
    </div>
    <div class="form-group">
   <div class="col-lg-3">

      <%= f.label :image %>
      </div>
   <div class="col-lg-9">

      <%= f.file_field :image %>
    </div>
    </div>
    
    <div class="form-group text-center">
      <%= f.button :submit, class: 'btn btn-success' %>
    </div>
  <% end %>